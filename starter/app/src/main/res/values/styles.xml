<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="primary_font_style" parent="android:Widget.TextView">
        <item name="android:color">@color/app_white</item>
        <item name="android:textSize">24sp</item>
    </style>


    <style name="secondary_font_style" parent="android:Widget.TextView">
        <item name="android:color">@color/app_grey</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>
